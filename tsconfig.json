{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./build",
    "baseUrl": ".",
    "resolveJsonModule": true,
  },
  "include": ["./typings/**/*.d.ts", "./src/**/*.ts", "./config.ts", ".git/*"],
  "exclude": ["./node_modules/*", "./build/*"]
}
