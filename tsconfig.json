{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2021"],
    "outDir": "./build",
    "rootDir": ".",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "exclude": ["build", "node_modules", "example.*.ts"]
}
